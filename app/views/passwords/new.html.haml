%div.password-reset
  %h2
    = t(:title, scope: :new)

  %p
    = t(:description, scope: :new)

  = form_for :password, url: passwords_path do |form|
    %div.text-field
      = form.label t(:label, scope: :new)
      = form.text_field :email, type: 'email'

    %di.submit-field
      = form.submit
